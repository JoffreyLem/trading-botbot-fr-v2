@using StrategyApi.StrategyBackgroundService.Dto
@inherits PositionOpenedComponentBase


<SfGrid @ref="Grid" DataSource="@Positions" AllowPaging="true" AllowResizing="true" EnableAdaptiveUI="true">
    <GridPageSettings PageSize="5"></GridPageSettings>
    <GridColumns>
        <GridColumn Field="@nameof(PositionDto.Symbol)" HeaderText="Symbol"></GridColumn>
        <GridColumn Field="@nameof(PositionDto.TypePosition)" HeaderText="Type"></GridColumn>
        <GridColumn Field="@nameof(PositionDto.Volume)" HeaderText="Volume"></GridColumn>
        <GridColumn Field="@nameof(PositionDto.Spread)" HeaderText="Spread"></GridColumn>
        <GridColumn Field="@nameof(PositionDto.DateOpen)" Type="ColumnType.Date" HeaderText="Date open"></GridColumn>
        <GridColumn Field="@nameof(PositionDto.OpenPrice)" HeaderText="Open Price"></GridColumn>
        <GridColumn Field="@nameof(PositionDto.Profit)" HeaderText="Profit"></GridColumn>
        <GridColumn Field="@nameof(PositionDto.StopLoss)" HeaderText="Sl"></GridColumn>
        <GridColumn Field="@nameof(PositionDto.TakeProfit)" HeaderText="TP"></GridColumn>
    </GridColumns>
</SfGrid>

<style> 
    .e-grid .e-spinner-pane{ 
          display:none; 
     } 
</style>