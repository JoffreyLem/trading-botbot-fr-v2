@inherits ApiComponentBase;

<head>
    <link href="css/apiComponent.css" rel="stylesheet"/>
</head>
<div class="card shadow p-3">
    <div class="card-body">
        
        <h2>Gestion API</h2>
        <div>
            <SfDropDownList Enabled="ApiHandlerListEnabled" @ref="_dropDownList" @bind-Value="@ApiSelected" Placeholder="Choisir une api" FloatLabelType="FloatLabelType.Auto" Width="300px" DataSource="@ApiProviders" TValue="string" TItem="string">
                <DropDownListEvents TValue="string" TItem="string" ValueChange="OnApiProviderValueChange"></DropDownListEvents>
            </SfDropDownList>
            @if (IsConnected)
            {
                <div class="mt-3">
                    <SfButton @onclick="Disconnect">Disconnect</SfButton>
                </div>
            }
        

            @if (!string.IsNullOrEmpty(ApiSelected) && !IsConnected)
            {
                <EditForm  Model="@ConnectDto" OnValidSubmit="Connect" class="mt-3">
                    <DataAnnotationsValidator/>
                    <ValidationSummary/>
                    <div class="form-group">
                        <label for="first-name">User</label>
                        <SfTextBox Type="InputType.Text" ID="first-name" @bind-value="ConnectDto.User"></SfTextBox>
                    </div>
                    <div class="form-group">
                        <label for="last-name">Password</label>
                        <SfTextBox Type="InputType.Password" ID="last-name" @bind-value="ConnectDto.Pwd"></SfTextBox>
                    </div>
                    <div class="mt-3">
                        <SfButton>Submit</SfButton>
                    </div>
                </EditForm>
            }
            <div id="container">
                <SfSpinner @bind-Visible="@OnLoading"/>
            </div>
        </div>
    </div>

   

</div>

